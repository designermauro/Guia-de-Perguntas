<%-include ("partials/header.ejs"); %>
<body>
    <%-include ("partials/navbar.ejs"); %>
    
    <div class="container">
        <hr>
        <a href="/perguntar" class="btn btn-primary">Voltar รก Perguntar</a>
        <a href="/" class="btn btn-primary">Voltar รก ver as perguntas</a>
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder">
            <h3>Responder</h3>
            <textarea class="form-control" name="corpo" placeholder="Digite sua resposta aqui..."></textarea> 
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas:</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-bary">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
      <%  }) %>

    </div> 
</body>
